		"prettier": "^1.19.1",
		"simple-get": "^4.0.0",
		"tap": "^15.1.5"
	},
	"dependencies": {
		"@types/express": "^4.17.3",
		"@types/express-serve-static-core": "^4.17.2",
		"@types/json-schema": "^7.0.4",
		"ajv": "^8.11.0"
	},
	"engines": {
		"node": ">=14"
	},
	"husky": {
